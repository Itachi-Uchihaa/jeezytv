{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./scripts"
    },
    "include": ["scripts/**/*"],
    "exclude": ["node_modules"]
  }